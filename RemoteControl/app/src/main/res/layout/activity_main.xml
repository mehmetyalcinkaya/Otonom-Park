<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@mipmap/touchpad"
    tools:context=".MainActivity">
<FrameLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="125dp"
    android:layout_marginBottom="5dp">

    <GridLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4">

        <Button
            android:id="@+id/btn_up"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:background="@drawable/selector_naw_up" />
        <Button
            android:id="@+id/btn_left"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_rowSpan="2"
            android:background="@drawable/selector_naw_left" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowSpan="2"
            android:background="@drawable/selector_naw_ok"
            android:layout_columnSpan="3" />

        <Button
            android:id="@+id/btn_right"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_rowSpan="2"
            android:background="@drawable/selector_naw_right"/>

        <Button
            android:id="@+id/btn_down"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_columnSpan="3"
            android:background="@drawable/selector_naw_down" />
    </GridLayout>

</FrameLayout>
    <Button
        android:id="@+id/btn_bluetooth"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="65dp"
        android:background="@drawable/button_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/btn_park"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-80dp"
        android:layout_marginStart="220dp"
        android:background="@drawable/selector_parking"
        app:layout_constraintBottom_toBottomOf="@id/btn_bluetooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.v7.widget.LinearLayoutCompat>
